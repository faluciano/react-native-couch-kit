{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "paths": {
      "@couch-kit/core": ["../core/lib"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**", "src/**/__mocks__/**"]
}
